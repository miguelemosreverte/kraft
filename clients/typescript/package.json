{
  "name": "@kraft/client",
  "version": "0.1.0",
  "description": "TypeScript client for Kraft distributed workflows",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "lint": "eslint src/",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["kraft", "workflow", "durable", "distributed", "cluster"],
  "author": "Miguel Lemos",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/miguelemosreverte/kraft"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "zod": "^3.22.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  }
}
